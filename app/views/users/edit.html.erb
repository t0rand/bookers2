<div class="container">

<% if @user.errors.any? %>
    <div id="error_exaplanation">
		<%= @user.errors.count %>error
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

    <div class"row">
        <div class="col-md-6">
<%= form_with model:@user, local: true do |f| %>
  <h1>User info</h1>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <br>
  <%= f.submit 'Update User' %>
  <br>
<% end %>
</div>
</div>
</div>