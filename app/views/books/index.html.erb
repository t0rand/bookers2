<div class="container">

<% if @book.errors.any? %>
    <div id="error_exaplanation">
		<%= @book.errors.count %>error
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>


    <div class="row">
        <div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render 'new' %>
</div>

        <div class="col-xs-9">
<h1>Books</h1>
<table class="table">
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book) do %>
                <%= book.title %>
                <% end %>
            </td>
            <td>
                <%= book.body %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
</div>