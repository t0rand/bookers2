<%= render 'users/info', user: @user %>
<%= render 'new' %>

<h1>Books</h1>
<table class="table">
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <% @books.each do |book| %>
        <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
    </tbody>
</table>