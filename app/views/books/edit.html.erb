<div class="container">

<% if @book.errors.any? %>
    <div id="error_exaplanation">
		<%= @book.errors.count %>error
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

    <div class="row">
        <div class="col-md-6">
<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class: 'col-xs-12' %>
  <h4>Opinion</h4>
  <%= f.text_area :body, class: 'col-xs-12' %>
  <br>
  </br>
  <%= f.submit 'Update Book', class: 'btn btn-primary col-xs-12' %>
<% end %>
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
</div>
</div>